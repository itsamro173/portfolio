<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="24dp">

    <EditText android:id="@+id/emailInput"
        android:hint="Email" android:inputType="textEmailAddress"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/passwordInput"
        android:hint="Password" android:inputType="textPassword"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/loginBtn"
        android:text="Login" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="16dp"/>

    <Button android:id="@+id/registerRedirectBtn"
        android:text="No account? Register" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
</LinearLayout>
